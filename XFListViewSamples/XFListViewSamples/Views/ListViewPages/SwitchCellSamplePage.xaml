<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFListViewSamples.Views.ListViewPages.SwitchCellSamplePage"
             xmlns:local="clr-namespace:XFListViewSamples.Views.ListViewPages">
    <ContentPage.BindingContext>
        <local:SwitchCellSampleViewModel/>
    </ContentPage.BindingContext>
    <ListView
            ItemsSource="{Binding Items}"
            CachingStrategy="RecycleElement">
        <!--SwitchCell is a Built in Cell, Which Represnet On/OFF Toggling kind of functionality through List-->
        <ListView.ItemTemplate>
            <DataTemplate>
                <SwitchCell Text="{Binding AppName}" On="{Binding IsEnabled}"/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
